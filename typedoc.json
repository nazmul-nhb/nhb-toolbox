{
	"entryPoints": ["src/index.ts"],
	"tsconfig": "tsconfig.json",
	"json": "metadata/reflection.json",
	"skipErrorChecking": true,
	"excludePrivate": true,
	"includeVersion": true,
	// "excludeNotDocumented": true,
	"suppressCommentWarningsInDeclarationFiles": true,
	"excludeProtected": true,
	"useTsLinkResolution": true,
	"cleanOutputDir": true,
	"validation": {
		"invalidLink": false,
		"notDocumented": false
	},
	"blockTags": [
		"@defaultValue",
		"@deprecated",
		"@example",
		"@param",
		"@privateRemarks",
		"@remarks",
		"@returns",
		"@see",
		"@throws",
		"@typeParam",
		"@author",
		"@callback",
		"@category",
		"@categoryDescription",
		"@default",
		"@document",
		"@extends",
		"@augments",
		"@yields",
		"@group",
		"@groupDescription",
		"@import",
		"@inheritDoc",
		"@jsx",
		"@license",
		"@module",
		"@mergeModuleWith",
		"@prop",
		"@property",
		"@return",
		"@satisfies",
		"@since",
		"@sortStrategy",
		"@template",
		"@type",
		"@typedef",
		"@summary",
		"@preventInline",
		"@inlineType",
		"@preventExpand",
		"@expandType",
		"@instance",
		"@notes",
		"@note",
		"@static",
		"@generic",
		"@warning",
		"@alias",
		"@description"
	],
	"excludeExternals": false
}
